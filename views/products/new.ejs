  <h3>Product Details</h3>
<section class="new-details">
  <div>
    <label>Name: </label>
    <input required autocomplete="off" name="name" form="new-product-form" type="text">
  </div>
  <div>
    <label>Description: </label>
    <textarea cols="35" rows="5" autocomplete="off" name="description" form="new-product-form" type="text"></textarea>
  </div>
  <div>
    <label>Price: </label>
    <input autocomplete="off" name="price" form="new-product-form" type="text">
  </div>
  <div>
    <label>SKU: </label>
    <input autocomplete="off" name="sku" form="new-product-form" type="text">
  </div>
  <div>
    <label>QTY: </label>
    <input autocomplete="off" name="qty" form="new-product-form" type="text">
  </div>
  <div id="new-details-check">
    <label>In stock: </label>
    <input type="checkbox" name="available">
  </div>

  <button type="submit" form="new-product-form" formaction="/products/create?editComps=true">Save Product & add Components</button>
  <button type="submit" form="new-product-form">
    Add New Product
  </button>
</section>


</main>

