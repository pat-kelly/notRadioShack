<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
<section>
  <a href="">Products</a>
  <a href="">Components</a>
</section>

<h4>Click on the name of a product to edit it.</h4>
<table>
  <thead>
    <tr>
      <th>SKU</th>
      <th>Name</th>
      <th>QTY</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
      <tr>
        <td><%= product.sku %></td>
        <td><a href="/products/edit/<%= product._id %>"><%= product.name %></a></td>
        <td><%= product.qty %></td>
        <td><%= product.price %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
<form action="/products/new">
  <button type="submit">
    Add New Product
  </button>
</form>
</main>

<%- include('../partials/footer') %>