<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
<section>
  <a href="">Products</a>
  <a href="">Components</a>
</section>

<h4>Click on the name of a product to edit it.</h4>

<table>
  <thead>
    <tr>
      <% if (locals.user?.role >=900) { %>
        <th></th>
      <% } %>
      <th>SKU</th>
      <th>Name</th>
      <th>QTY</th>
      <th>Price</th>
      <th>Availability</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
      
      <tr>
        <% if (locals.user?.role >= 900) { %>
          <td>
            <form action="/products/<%= product._id %>?_method=DELETE" method="POST">
              <button type="submit" class="del-button">X</button>
            </form>
          </td>
        <% } %>
        <td><%= product.sku %></td>
        <td><a href="/products/edit/<%= product._id %>"><%= product.name %></a></td>
        <td><%= product.qty %></td>
        <td><%= product.price %></td>
        <td><%= product.available ? 'In Stock' : 'Not In Stock' %> </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<form action="/products/new">
  <button type="submit">
    Add New Product
  </button>
</form>
</main>

<%- include('../partials/footer') %>